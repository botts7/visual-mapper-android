<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

    <!-- Notification permission (required for Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Boot receiver for auto-start -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Wake lock for keeping service alive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Optional: Overlay permission for visual feedback -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Query all packages for LAUNCH_APP step (Android 11+ package visibility) -->
    <queries>
        <!-- Allow querying any app with a launcher activity -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
        <!-- Allow launching any app by package name -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <application
        android:name=".VisualMapperApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisualMapperCompanion"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="34">

        <!-- Main Container Activity (Launcher) -->
        <activity
            android:name=".ui.fragments.MainContainerActivity"
            android:exported="true"
            android:theme="@style/Theme.VisualMapperCompanion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Legacy Main Activity (kept for reference) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion" />

        <!-- Privacy Settings Activity -->
        <activity
            android:name=".ui.PrivacySettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Privacy Settings" />

        <!-- Audit Log Activity -->
        <activity
            android:name=".ui.AuditLogActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Audit Log" />

        <!-- Lock Screen Activity -->
        <activity
            android:name=".ui.LockScreenActivity"
            android:exported="false"
            android:theme="@style/LockScreenTheme"
            android:label="Unlock" />

        <!-- Flow List Activity -->
        <activity
            android:name=".ui.FlowListActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Flows" />

        <!-- Flow Detail Activity -->
        <activity
            android:name=".ui.FlowDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Flow Details" />

        <!-- Flow Wizard Activity -->
        <activity
            android:name=".ui.FlowWizardActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Create Flow" />

        <!-- Action Menu Activity (for overlay recording) -->
        <activity
            android:name=".ui.overlay.ActionMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion.Dialog"
            android:label="Select Action"
            android:excludeFromRecents="true" />

        <!-- Recording Overlay Service -->
        <service
            android:name=".ui.overlay.RecordingOverlayService"
            android:exported="false" />

        <!-- Accessibility Service -->
        <service
            android:name=".accessibility.VisualMapperAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- MQTT Service -->
        <service
            android:name=".mqtt.MqttService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="mqtt_connection" />
        </service>

        <!-- Paho MQTT Service (required by library) -->
        <service
            android:name="org.eclipse.paho.android.service.MqttService"
            android:exported="false" />

        <!-- Flow Executor Service -->
        <service
            android:name=".service.FlowExecutorService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="flow_execution" />
        </service>

        <!-- App Explorer Service (Smart Flow Generator) -->
        <service
            android:name=".explorer.AppExplorerService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="app_exploration" />
        </service>

        <!-- Exploration Result Activity -->
        <activity
            android:name=".explorer.ExplorationResultActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Exploration Results" />

        <!-- Guided Correction Activity -->
        <activity
            android:name=".explorer.GuidedCorrectionActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Fix Issues" />

        <!-- Exploration Settings Activity (Access Control) -->
        <activity
            android:name=".ui.ExplorationSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.VisualMapperCompanion"
            android:label="Access Control" />

        <!-- Auto Training Service (ML Batch Training) -->
        <service
            android:name=".explorer.AutoTrainingService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="ml_training" />
        </service>

        <!-- Screen Capture Streaming Service -->
        <service
            android:name=".streaming.ScreenCaptureService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

        <!-- Boot Receiver for auto-start -->
        <receiver
            android:name=".service.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Idle/Charging Receiver for opportunistic training -->
        <receiver
            android:name=".explorer.IdleChargingReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
