<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Fix Issues"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress Indicator -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Issue 1 of 5"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 remaining"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="20"
                        android:max="100"
                        android:progressTint="@color/primary"
                        android:progressBackgroundTint="@color/divider" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Current Issue Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCurrentIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/error"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Issue"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textColor="@color/error"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textIssueType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Element Stuck"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/textIssueDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Couldn't interact with element after multiple attempts"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_screen"
                            app:tint="@color/text_hint" />

                        <TextView
                            android:id="@+id/textScreenInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Screen: home_screen"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutElementInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_touch"
                            app:tint="@color/text_hint" />

                        <TextView
                            android:id="@+id/textElementInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Element: Settings button"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Navigation Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Navigation"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/layoutAutoNavigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/textNavigationStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ready to navigate"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />

                        <Button
                            android:id="@+id/btnNavigate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Navigate to Screen"
                            android:layout_marginTop="12dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutManualNavigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No path found - please navigate manually"
                            android:textSize="14sp"
                            android:textColor="@color/warning" />

                        <TextView
                            android:id="@+id/textManualInstructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Navigate to the target app and find the problematic screen, then tap 'I'm There' below."
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnImThere"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I'm There"
                            android:layout_marginTop="12dp"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Demonstrate Correction"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textColor="@color/success"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show the app the correct action for this element:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnDemonstrateTap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to Demonstrate"
                        app:icon="@drawable/ic_touch"
                        style="@style/Widget.MaterialComponents.Button" />

                    <Button
                        android:id="@+id/btnScrollFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scroll First Required"
                        android:layout_marginTop="8dp"
                        app:icon="@drawable/ic_scroll"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnMarkIgnore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ignore"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                        <Button
                            android:id="@+id/btnMarkDangerous"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dangerous"
                            android:textColor="@color/error"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footer Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnSkip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Skip Issue"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel All"
                    android:textColor="@color/error"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
