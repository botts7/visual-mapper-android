<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Raw Value Preview (shows original captured text) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raw Value"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textRawValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample: 542 km"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sensor Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sensor Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Extraction Method -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extraction Method"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerExtractionMethod"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="8dp" />

        <!-- Regex Pattern (shown only when regex is selected) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRegexPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Regex Pattern"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRegexPattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="monospace"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textRegexHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e.g., (\\d+) to extract numbers, (.+?) km to extract before km"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <!-- Extract Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <CheckBox
                android:id="@+id/checkExtractNumeric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extract numeric value only"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkRemoveUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove unit suffix (e.g., 94% -> 94)"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Extraction Preview -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extraction Preview"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPreviewResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="542"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/textPreviewError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/error"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Device Class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Class"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerDeviceClass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="8dp" />

        <!-- Unit of Measurement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit of Measurement"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="8dp" />

        <!-- State Class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Class"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerStateClass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="8dp" />

        <!-- Info text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device class and unit help Home Assistant display sensors correctly. State class enables statistics tracking."
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
