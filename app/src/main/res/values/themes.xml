<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <!-- Using Light theme (not DayNight) since we have hardcoded light colors -->
    <style name="Theme.VisualMapperCompanion" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Surface and background colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Text colors for input fields -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:editTextColor">@color/text_primary</item>
    </style>

    <!-- Consent Dialog Theme -->
    <style name="ConsentDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!-- Lock Screen Theme -->
    <style name="LockScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- PIN Button Style -->
    <style name="PinButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Dialog Theme for Action Menu (bottom sheet style) -->
    <style name="Theme.VisualMapperCompanion.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
